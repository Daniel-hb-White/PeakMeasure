<RootWidget>:
    Carousel:
        direction: "left"

        MDFloatLayout:
            Image:
                id: camera_image
                fit_mode: 'cover'

            MDAnchorLayout: # AnchorLayout for screen positon
                anchor_x: "center"
                anchor_y: "top"
                MDBoxLayout: # BoxLayout for size, etc.
                    orientation: "horizontal"
                    size_hint: None, None
                    size: dp(280), dp(100)
                    padding: 20
                    spacing: 10

                    MDLabel:
                        id: label_distance
                        md_bg_color: [0, 0, 0, 0.3]
                        padding: dp(4), dp(4)
                        halign: "center"
                        multiline: True
                        text: "Distanz:\n0m"

                    MDLabel:
                        id: label_height
                        md_bg_color: [0, 0, 0, 0.3]
                        padding: dp(4), dp(4)
                        halign: "center"
                        multiline: True
                        text: "Höhe:\nN/A"

                MDAnchorLayout:
                    anchor_x: "center"
                    anchor_y: "center"
                    MDIcon:
                        icon: "plus"
                        icon_color: [1, 1, 1, 1]
        MDRelativeLayout:
            MDTextField:
                pos_hint: {"center_x": .5, "center_y": .5}
                mode: "outlined"
                size_hint_x: None
                width: dp(200)
                md_bg_color: [1, 1, 1, 1]
                on_text: root.text_field_person_height_on_text(self.text)
                MDTextFieldHintText:
                    text: "Größe"
            MDLabel:
                text: "Geben Sie Ihre Größe in Metern ein (z.B. 1.75)"
                theme_text_color: "Secondary"
                halign: "center"
                size_hint_y: None
                height: dp(40)
                pos_hint: {"center_x": .5, "y": .2}

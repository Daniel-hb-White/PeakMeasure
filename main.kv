<RootWidget>:
    Carousel:
        direction: "left"
        
        MDFloatLayout:
            Camera:
                play: True
                keep_ratio: True
                fit_mode: 'cover'

            MDAnchorLayout:  # AnchorLayout for screen position
                anchor_x: "center"
                anchor_y: "top"
                MDBoxLayout:  # BoxLayout for size, etc.
                    orientation: "horizontal"
                    size_hint: None, None
                    size: dp(280), dp(100)
                    padding: 20
                    spacing: 10

                    MDLabel:
                        id: label_distance
                        color: "white"
                        md_bg_color: [0, 0, 0, 0.3]
                        padding: dp(4), dp(4)
                        halign: "center"
                        multiline: True
                        text: "Distanz:\n0m"

                    MDLabel:
                        id: label_height
                        color: "white"
                        md_bg_color: [0, 0, 0, 0.3]
                        padding: dp(4), dp(4)
                        halign: "center"
                        multiline: True
                        text: "Höhe:\nN/A"

                MDAnchorLayout:
                    anchor_x: "center"
                    anchor_y: "center"
                    MDIcon:
                        icon: "plus"
                        icon_color: [1, 1, 1, 1]

        MDFloatLayout:
            MDAnchorLayout:  # AnchorLayout for screen position
                anchor_x: "center"
                anchor_y: "top"
                padding: dp(30), dp(30)
                md_bg_color: "white"

                MDBoxLayout:  # BoxLayout für die zweite Seite
                    orientation: "vertical"
                    md_bg_color: "white"
                    size_hint: None, None
                    size: dp(280), dp(400)

                    MDTextField:
                        text_color_normal: "black"
                        line_color_normal: "black"
                        size_hint_y: None
                        height: dp(50)  # Höhe des Textfeldes
                        mode: "outlined"  # Benutzt die Outline für das Textfeld
                        width: dp(200)
                        hint_text: ""  # Hinweistext im Textfeld
                        text: "1.5"

                        on_text: root.text_field_person_height_on_text(self.text)
                        MDTextFieldHintText:
                            text: "Höhe Ihres Gerätes in Metern"

                    MDLabel:
                        text: "[b]Anleitung:[/b]\n\n"
                        markup: True
                        color: "black"    

                    MDLabel:
                        text: "[b]1. Setze den niedrigsten Punkt:[/b] \nZielen Sie mit dem Fadenkreuz auf die Basis des Objekts und tippen Sie auf den Bildschirm. \n\n[b]2. Setze den höchsten Punkt:[/b] \nZielen Sie mit dem Fadenkreuz auf die Spitze des Objekts und tippen Sie erneut auf den Bildschirm. \n\n[b]3. Zurücksetzen:[/b] \nTippen Sie ein weiteres Mal auf den Bildschirm, um die Messung zurückzusetzen."
                        color: "black"
                        markup: True
                        font_size: 10
